{% extends "templates/default.html.twig" %}

{% block title %}Register
{% endblock %}

{% block content %}
	<div class="flex h-screen flex-col justify-center items-center">
		<h1 class="mb-5">Register</h1>
		<p class="mb-5 text-[#ff0000]">{{error}}</p>
		<form class="flex flex-col gap-4" action="/register" method="post">
			<input class="rounded-xl p-2 bg-[#3F4A7A]" type="text" name="username" placeholder="Username">
			<input class="rounded-xl p-2 bg-[#3F4A7A]" type="text" name="firstname" placeholder="First Name">
			<input class="rounded-xl p-2 bg-[#3F4A7A]" type="text" name="lastname" placeholder="Last Name">
			<input class="rounded-xl p-2 bg-[#3F4A7A]" type="number" name="phone_number" placeholder="Phone Number">

			<input
			class="rounded-xl p-2 bg-[#3F4A7A]" type="text" name="email" placeholder="Email">
			{# TODO: image #}
			<input class="rounded-xl p-2 bg-[#3F4A7A]" type="password" name="password" placeholder="Password">
			<input class="rounded-xl p-2 bg-[#3F4A7A] cursor" type="submit" value="Register">
		</form>
	</div>
{% endblock %}
