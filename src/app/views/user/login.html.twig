{% extends "templates/default.html.twig" %}

{% block title %}Login
{% endblock %}

{% block content %}
	<div class="flex h-screen gap-4 flex-col justify-center items-center">
		<h1>Login</h1>
		<form class="flex flex-col gap-2" action="/login" method="post">
			<input class="rounded-xl p-2 bg-[#3F4A7A]" type="text" name="username" placeholder="Username">
			<input class="rounded-xl p-2 bg-[#3F4A7A]" type="password" name="password" placeholder="Password">
			<input class="mt-5 cursor rounded-xl bg-[#3F4A7A] p-2 text-l shadow-xl" type="submit" value="LogIn">
		</form>
	</div>
{% endblock %}
